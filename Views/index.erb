<% if false%>
<!-- 
we're splitting our code. This may look complicated, but 
realistically we're just splitting the layout and index
logically based on what we would want to see where. 

The index appears in the yield on the layout. 
The layout has our scripts and style and starts the Angular app.
This might not be the right way to do it but I'm exploring right now. 
if false is an easy way to comment out a large block of code.  
-->
<% end %>

	<div ng-controller="greetingController">
		{{greeting}}
	
	<script type="text/ng-template" id="tree_item_renderer.html">
		{{fileNameKey}}
		<ul>
		    <li ng-if='fileNameKey !== "files"' ng-repeat="(fileNameKey, object) in object">
		      <div class="parent_folder" ng-if='fileNameKey !== "files"' ng-include="'tree_item_renderer.html'"></div>
		    </li>
		</ul>
       
		<div class="card" ng-if='fileNameKey !== "files"' ng-repeat='fileName in object.files'>
            <img ng-src="{{fileName.file_address}}" alt="100%x280" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%22289%22%20height%3D%22280%22%20viewBox%3D%220%200%20289%20280%22%20preserveAspectRatio%3D%22none%22%3E%3C!--%0ASource%20URL%3A%20holder.js%2F100px280%2Fthumb%0ACreated%20with%20Holder.js%202.8.2.%0ALearn%20more%20at%20http%3A%2F%2Fholderjs.com%0A(c)%202012-2015%20Ivan%20Malopinsky%20-%20http%3A%2F%2Fimsky.co%0A--%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%3C!%5BCDATA%5B%23holder_152aa37397c%20text%20%7B%20fill%3A%23AAAAAA%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A14pt%20%7D%20%5D%5D%3E%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_152aa37397c%22%3E%3Crect%20width%3D%22289%22%20height%3D%22280%22%20fill%3D%22%23EEEEEE%22%2F%3E%3Cg%3E%3Ctext%20x%3D%22107.515625%22%20y%3D%22146.3703125%22%3E289x280%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true" style="height: 280px; width: 100%; display: block;">
            <p class="card-text">        	
            	{{fileName.file_address}}<br />
	        	{{fileName.file_created_time}}<br />
	        	{{fileName.file_name}}<br />
	        	{{fileName.file_size}}<br />
	        	{{fileName.file_type}}<br /></p>
          </div>
	</script>
		<div class="album">
			<div class="container">
				<div class="row row-background">
					<li ng-if='fileNameKey !== "files"' ng-repeat="(fileNameKey, object) in dataObject.data" ng-include="'tree_item_renderer.html'"></li>
				</div>
			</div>
		</div>
	</div>
